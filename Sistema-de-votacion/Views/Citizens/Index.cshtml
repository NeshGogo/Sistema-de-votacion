@model IEnumerable<Sistema_de_votacion.Models.Citizen>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4 text-sm-center mb-4">Lista de Ciudadanos Inscritos en el Padron.</h1>
<br />

<div class="d-flex justify-content-between mt-4">
    <p>
        <a asp-action="Create" class="btn btn-outline-success">Añadir nuevo</a>
    </p>
    <form asp-action="Index" method="post" class="form">
        <label class="form-check form-check-inline">
            <input name="activeParam" type="checkbox" class="form-control-sm" />
            <span> Activos &nbsp;&nbsp;</span>
            <input class="btn btn-sm btn-outline-info" type="submit" value="Buscar" />
        </label>
    </form>
</div>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Advertencia!</strong> No se encontro ningun ciudadano en el padron electoral.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<table class="table table-striped table-hover table-bordered text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td class="btn-block">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalle</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

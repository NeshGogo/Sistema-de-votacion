@model Election
@{
    ViewData["Title"] = "Votation";
}

<h1>Bienvenido.</h1>
<h3>Ejerza su derecho al voto.</h3>

<div>
    @foreach (var electionPosition in Model.ElectionPosition)
    {
        <div class="card" style="width: 18rem;">
            <img src="~/Images/Anonimo.jpg" class="card-img-top" alt="Imagen de icono anonimo">
            <div class="card-body">
                <p class="card-text">Pulse el boton para pasar a la pantalla de seleccion de candidatos.</p>
                <a class="btn btn-primary" href="@Url.Action("Candidate", electionPosition.Position)" > Candidatos</a>
            </div>
        </div>
        }


    </div>



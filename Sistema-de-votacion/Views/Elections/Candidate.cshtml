@model Sistema_de_votacion.ViewModels.ElectionVotationViewModel
@{ 
    List<Election> election = ViewBag.Election;
    
}


    <h4>Listado de Candidatos para @Model.Position.Name</h4>

    <form asp-action="Votation" method="post">
        <div>

            <input type="hidden" asp-for="PositionIndex" />
            <input type="hidden" asp-for="ElectionId" />
            <input type="hidden" asp-for="CitizenId" />

        </div>
        <div class="card-deck">

            @foreach (var candidate in Model.Candidates)
            {
                var photoPath = "~/images/" + (candidate.ProfilePhothoPath ?? "Anonimo.jpg");
                <div class="card m-3" style="min-width:14rem; max-width:24.5%">
                    <div class="card-header text-center">
                        <h6>@(candidate.Name + " " + candidate.LastName)</h6>
                        <h6>@candidate.PoliticParty.Name</h6>
                        <h6>@candidate.Position.Name</h6>
                    </div>
                    <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                    <div class="card-footer text-center">                       
                        <button asp-action="Votation" type="submit" asp-controller="Elections" asp-route-candidateId="@candidate.Id" class="btn btn-primary btn-sm" style="width:auto">Votar</button>                

                    </div>
                </div>
            }

        </div>
    </form>

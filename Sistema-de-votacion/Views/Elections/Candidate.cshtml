@model ElectionVotationViewModel
@{ 
   Layout = "~/Views/Shared/_LayoutVotation.cshtml";
    
}


    <h4>Listado de Candidatos para la Posicion de @Model.CurrentPosition</h4>

    <form asp-action="Candidate" method="post">

        <div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" value="@Model.Name" />
            <input type="hidden" asp-for="CurrentPosition" />
        </div>
        <div class="card-deck">

            @foreach (var candidate in Model.Candidates)
            {
                var photoPath = "~/images/" + (candidate.ProfilePhothoPath ?? "Anonimo.jpg");
                <div class="card m-3" style="min-width:14rem; max-width:24.5%">
                    <div class="card-header text-center">
                        <h6>@(candidate.Name + " " + candidate.LastName)</h6>
                        <h6>@candidate.PoliticParty.Name</h6>
                        <h6>@candidate.Position.Name</h6>
                    </div>
                    <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                    <div class="card-footer text-center">                       
                        <button type="submit" asp-controller="Elections" asp-route-candidateId="@candidate.Id"
                            class="btn btn-primary btn-sm" style="width:auto">Votar</button>

                    </div>
                </div>
            }

        </div>
    </form>

@model Sistema_de_votacion.DTO.LoginDTO
@{
    Layout = "~/Views/Shared/_LayoutVotation.cshtml";
}



<a asp-action="Register" class="text-right font-weight-bold nav-link text-dark ">Registro</a>


<div class="container d-flex justify-content-center">
    <div class="card w-50  mt-lg-5">
        <div class="card-header bg-dark">
            <h1 class="card-title text-white">Login</h1>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="card-body">
            <div class="mb-4">
                <h3 class="card-title mb-0">Identificate</h3>
                <span class="text-black-50">Solo personal autorizado⚠</span>
            </div>
            <form asp-action="Login" method="Post">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" type="text" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Enviar</button>
                <a  asp-controller="Elections" asp-action="Index">Volver</a>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
